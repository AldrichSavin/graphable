{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    /* Projects */
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    /* Language and Environment */
    "target": "es2016",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "experimentalDecorators": true,
    /* Modules */
    "module": "ESNext",
    "rootDir": "./",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "resolveJsonModule": true,
    /* Emit */
    // 使用rollup-plugin-dts替代typescript的d.ts生成
    // "declaration": false,
    // "declarationMap": false,
    // "sourceMap": false,
    // "outDir": "./dist",
    // "removeComments": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
